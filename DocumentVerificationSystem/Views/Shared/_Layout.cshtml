@{
  Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Document Verification System</title>
  <link rel="stylesheet" href="~/lib/bootstrap/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" />
  <link href="~/metronic/plugins/global/plugins.bundle.css" rel="stylesheet" />
  <link href="~/metronic/css/style.bundle.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="~/js/jquery-3.6.0.min.js"></script>
  <script src="~/js/bootstrap.bundle.min.js"></script>
    <link href="@Url.Content("~/assets/global/css/plugins.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/metronicv8_1/plugins/jquery-ui.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/metronicv8_1/plugins/demo13/global/plugins.bundle.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/metronicv8_1/css/demo13/style.bundle.css")" rel="stylesheet" type="text/css" />

</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">DocVerify</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          @* Check if session has a UserId *@
          @{
            var userId = Context.Session.GetInt32("UserId");
            bool isLoggedIn = userId.HasValue;
          }

          @if (isLoggedIn)
          {
            <li class="nav-item">
              <a class="nav-link" href="@Url.Action("Logout","Account")">Logout</a>
            </li>
          }
          else
          {
            <li class="nav-item">
              <a class="nav-link" href="@Url.Action("Login","Account")">Login</a>
            </li>
          }
        </ul>
      </div>
    </div>
  </nav>


  <div class="container mt-4">
    @RenderBody()
        <script src="~/metronic/plugins/global/plugins.bundle.js"></script>
        <script src="~/metronic/js/scripts.bundle.js"></script>
        @RenderSection("Scripts", required: false)
  </div>
</body>
</html>
